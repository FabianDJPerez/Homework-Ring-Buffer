{
    "version": 4,
    "configurations": [
        {
            /** 
             * ms-vscode.cmake-tools plugin should be installed.
             * 
             * It provides data for C/C++ plugin,
             * such as include paths, browse paths, defines, etc.
             */
            "name": "CMake",
            "includePath": [
                "${workspaceFolder}/**", // Incluye todas las carpetas del proyecto
                "${workspaceFolder}/Inc", // Ruta a tus archivos de cabecera
                "${workspaceFolder}/Core/Inc", // Ruta a archivos de cabecera específicos
                "${workspaceFolder}/build" // Ruta a la carpeta de construcción de CMake
            ],
            "configurationProvider": "ms-vscode.cmake-tools",
            "intelliSenseMode": "${default}"
        }
    ]
}